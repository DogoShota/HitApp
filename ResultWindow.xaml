<Page x:Class="HitApp.ResultWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HitApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="ResultWindow">

    <Grid>
        <Label Content="2023年度　医療情報システム" Grid.ColumnSpan="2" FontSize="20" HorizontalAlignment="Left" Margin="27,41,0,0" VerticalAlignment="Top"/>
        <Label Content="正答率" HorizontalAlignment="Left"  FontSize="26" Margin="27,97,0,0" VerticalAlignment="Top"/>
        <Label Content="65%" HorizontalAlignment="Left"  FontSize="26" Margin="125,97,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.437,-0.408"/>
        <DataGrid Name="DataGridName" 
                  Margin="292,10,10,33">
            <DataGrid.Columns>
                <DataGridTextColumn Header="No" Width="100" Binding="{Binding No}"/>
                <DataGridTextColumn Header="正解" Width="100" Binding="{Binding 正解}"/>
                <DataGridTextColumn Header="解説" Width="100" Binding="{Binding 解説}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
