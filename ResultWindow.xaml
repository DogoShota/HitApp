<Page x:Class="HitApp.ResultWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HitApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="ResultWindow">
    
    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"/>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.ColumnSpan="5" Fill="#fffeed"/>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.3*" MaxHeight="70"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.4*" MaxHeight="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="*" MaxWidth="300"/>
                <ColumnDefinition Width="0.1*" MaxWidth="10"/>
                <ColumnDefinition Width="*" MaxWidth="300"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Row="1" Grid.ColumnSpan="5">
                <Label x:Name="title" Content="2023年度　医療情報システム" FontSize="26" FontFamily="{StaticResource NotoSans}"/>
            </Viewbox>
            <Viewbox Grid.Row="3" Grid.ColumnSpan="5">
                <TextBlock x:Name="正解率" Text="正答率：65%" TextAlignment="Center" FontSize="25" FontFamily="{StaticResource NotoSans}"/>
            </Viewbox>
            <Button Grid.Row="5" Grid.Column="1" Margin="10" Style="{StaticResource MainButton}" FontFamily="{StaticResource YujiSyuku}" Click="reSelect" Background="LightPink">
                <Viewbox Stretch="Uniform">
                    <Label Content="最初に戻る"/>
                </Viewbox>
            </Button>
            <Button Grid.Row="5" Grid.Column="3" Margin="10" Style="{StaticResource MainButton}" FontFamily="{StaticResource YujiSyuku}" Click="retry" Background="LightBlue">
                <Viewbox Stretch="Uniform">
                    <Label Content="もう一度"/>
                </Viewbox>
            </Button>
        </Grid>

        <ScrollViewer Grid.Column="3">
            <Grid x:Name="dataGrid">
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
