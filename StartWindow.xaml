<Page x:Class="HitApp.StartWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HitApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="StartWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="0.5*" MinHeight="50" MaxHeight="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.7*" MinWidth="80" MaxWidth="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="医療情報技師過去問道場" FontSize="50" Background="White" TextAlignment="Center"/>
        <Button Grid.Row="2" Grid.Column="1" Background="LightPink" Click="Button_Click">
            <Viewbox Stretch="Uniform">
                <Label Content="はじめる"/>
            </Viewbox>
        </Button>
    </Grid>
</Page>
