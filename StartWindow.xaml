<Page x:Class="HitApp.StartWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HitApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="StartWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="0.3*" MinHeight="50" MaxHeight="100"/>
            <RowDefinition Height="0.6*" MinHeight="50" MaxHeight="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.6*" MinWidth="80" MaxWidth="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="image/doujou.png" Grid.ColumnSpan="3" Grid.RowSpan="5" Stretch="UniformToFill"/>
        <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="医療情報技師過去問道場" FontSize="50" FontFamily="{StaticResource YujiSyuku}" Background="Transparent" TextAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0"
                    Color="White"
                    Opacity="1"
                    BlurRadius="5"/>
            </TextBlock.Effect>
        </TextBlock>
        <Button Grid.Row="3" Grid.Column="1" Background="White" Opacity="0.9" Click="Button_Click">
            <Viewbox Stretch="Uniform">
                <Label Content="開始" FontSize="45"  FontFamily="{StaticResource YujiSyuku}"/>
            </Viewbox>
        </Button>
        <TextBlock Text="あいうえお" FontSize="40" Grid.Row="4" Height="40" VerticalAlignment="Top"/>
        <TextBlock Text="あいうえお" FontSize="40" Grid.Row="4" Height="40" VerticalAlignment="Center" FontFamily="{StaticResource YujiSyuku}"/>
        <TextBlock Text="あいうえお" FontSize="40" Grid.Row="4" Height="40" VerticalAlignment="Bottom" FontFamily="{StaticResource NotoSans}"/>
    </Grid>
</Page>
