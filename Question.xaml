<Page x:Class="HitApp.Question"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HitApp"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Question">

    <Grid HorizontalAlignment="Center" Width="850" Height="450" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="12,-1,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="50" FontSize="35"><Run Text="問１"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="16,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="586" FontSize="20" Grid.ColumnSpan="2"><Run Text="第二次予防にあたるのはどれですか。"/><LineBreak/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="title" HorizontalAlignment="Right" Margin="0,10,14,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="20" Height="26" Grid.Column="1"><Run Text="2023年度・医学医療"/></TextBlock>
        <Button Content="ア" HorizontalAlignment="Left" Margin="16,95,0,0"  VerticalAlignment="Top" Height="35" Width="65" FontSize="15"/>
        <Button Content="イ" HorizontalAlignment="Left" Margin="16,148,0,0" VerticalAlignment="Top" Height="35" Width="65" FontSize="15"/>
        <Button Content="ウ" HorizontalAlignment="Left" Margin="16,198,0,0" VerticalAlignment="Top" Height="35" Width="65" FontSize="15"/>
        <Button Content="エ" HorizontalAlignment="Left" Margin="16,14,0,0"  VerticalAlignment="Top" Height="35" Width="65" FontSize="15" Grid.Row="1"/>
        <Button Content="オ" HorizontalAlignment="Left" Margin="16,66,0,0"  VerticalAlignment="Top" Height="35" Width="65" FontSize="15" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="87,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="790" FontSize="15" Grid.ColumnSpan="3"><Run Language="ja-jp" Text="健康増進"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="87,0,0,0"   TextWrapping="Wrap" VerticalAlignment="Center" Height="26" Width="790" FontSize="15" Grid.ColumnSpan="3"><Run Language="ja-jp" Text="事故予防"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="87,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="790" FontSize="15" Grid.ColumnSpan="3"><Run Language="ja-jp" Text="疾病予防"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="87,24,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="790" FontSize="15" Grid.ColumnSpan="3" Grid.Row="1"><Run Language="ja-jp" Text="早期発見"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="87,66,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="790" FontSize="15" Grid.ColumnSpan="3" Grid.Row="1"><Run Language="ja-jp" Text="リハビリテーション"/></TextBlock>
        <Button Content="次の問題に進む" HorizontalAlignment="Left" Margin="250,1,0,0" VerticalAlignment="Top" Height="48" Width="152" FontSize="20" Grid.Column="1" Grid.Row="1"/>
        <Button Content="正解表示" HorizontalAlignment="Left" Margin="248,88,0,0" VerticalAlignment="Top" Height="49" Width="154" FontSize="20" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" TextAlignment="Center" Margin="276,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="45" Width="96" FontSize="15" Grid.Column="1"><Run Language="ja-jp" Text="あなたの回答　エ"/></TextBlock>
        <TextBox HorizontalAlignment="Left"  TextAlignment="Center"  Margin="266,191,0,0" TextWrapping="Wrap" Text="正解" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="118" Height="38" FontSize="20" Grid.Column="1"/>
        <Button Content="参考表示" HorizontalAlignment="Left" Margin="244,80,0,0" VerticalAlignment="Top" Height="37" Width="154" FontSize="20" Grid.Row="1" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="23,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="87" Width="812" FontSize="20" Grid.ColumnSpan="2" Grid.Row="1"><Run Language="ja-jp" Text="解説"/></TextBlock>

    </Grid>
</Page>
