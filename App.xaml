<Application x:Class="HitApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HitApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="YujiSyuku">
                /HitApp;component/fonts/YujiSyuku-Regular.ttf#Yuji Syuku Regular
            </FontFamily>
            <FontFamily x:Key="NotoSansMedium">
                /HitApp;component/fonts/NotoSansJp-Medium.ttf#Noto Sans JP Medium
            </FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
