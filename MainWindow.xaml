<Window x:Class="HitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HitApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="医療情報技師試験対策アプリ" FontSize="24" FontWeight="Bold" Margin="10"/>
            <ListBox>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Height="45">
                    <TextBlock Text="2024年度" FontSize="15" FontWeight="UltraBlack"  Margin="10" Height="20" Width="75" TextAlignment="Center"/>
                    <Button Content="情報処理技術系" Width="125" Height="25" Margin="10" Background="Aqua"/>
                    <Button Content="医療情報システム系" Width="125" Height="25" Margin="10" Background="Yellow"/>
                    <Button Content="医学・医療系" Width="125" Height="25" Margin="10" Background="LightGreen"/>
                </StackPanel>
            </ListBox>
            <Button Content="リセット" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
